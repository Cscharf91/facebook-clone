<h1>BookFace</h1>

<%= render 'form' %>
</br></br>

<% if @posts %>
  <% @posts.each do |post| %>
    <% next unless current_user.friendships.find_by(friend_id: post.user.id) || post.user_id == current_user.id %>
    <%= image_tag user_avatar(post.user, 75) %><br>
    <%= link_to post.user.first_name + ' ' + post.user.last_name, profile_user_path(post.user) %>:</br>
    <%= distance_of_time_in_words(post.created_at, Time.now) %> ago<br>
    <%= post.message %></br>
    <% if post.user.id == current_user.id %>
      <%= button_to 'Delete', post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %></br>
    <% end %>
    <% liked = post.likes.find { |like| like.user_id == current_user.id } %>
    <% if liked %>
      <%= button_to 'Unlike', post_like_path(post, liked), method: :delete %>
    <% else %>
      <%= button_to 'Like', post_likes_path(post), method: :post %>
    <% end %>
    <p><%= post.likes.count %> <%= post.likes.count > 1 ? 'Likes' : 'Like' %></p>

    <%= form_with(url: '/new_comment', method: 'POST') do |f| %>
      <%= f.label :message, "Comment:" %><br>
      <%= f.text_area :message %>
      <%= f.hidden_field :post_id, value: post.id %>
      <%= f.submit %>
    <% end %>
    <% if post.comments %>
      <% post.comments.each do |c| %>
        <%= image_tag user_avatar(c.user, 50) %><br>
        <%= link_to c.user.first_name + ' ' + c.user.last_name, profile_user_path(c.user) %>:</br>
        <%= distance_of_time_in_words(c.created_at, Time.now) %> ago<br>
        <%= c.message %></br>
        <% if c.user.id == current_user.id %>
          <%= button_to 'Delete', c, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %></br>
        <% end %>
      <% end %>
      ________________________________________________________________
      </br></br>
    <% end %>
  <% end %>
<% end %>